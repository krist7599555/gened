{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "src",
    "sourceMap": true,
    "lib": ["es2017", "es2015.promise", "es2018.promise", "dom"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "strict": false,
    "paths": {
      "@/*": ["./*"],
      "@util/*": ["util/*"],
      "@db/*": ["db/*"],
      "@scaping/*": ["scaping/*"],
      "@auth/*": ["auth/*"],
      "@types/*": ["types/*"],
      "@config/*": ["config/*"],
      "@regchula/*": ["regchula/*"]
    }
  },
  "include": ["index.ts", "src/**/*", "src/**/*.html"],
  "exclude": ["node_modules"]
}
